{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "ES2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "paths":{
            "@controllers*": ["controllers/*"]
        },
        "rootDirs": [
            "./src"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "_old"
    ]
}